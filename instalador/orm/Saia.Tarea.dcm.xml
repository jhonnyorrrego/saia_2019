<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Saia\Tarea" table="tarea">
    <id name="idtarea" type="integer" column="idtarea">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nombre" type="string" column="nombre" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="fecha" type="datetime" column="fecha" nullable="true"/>
    <field name="tiempoRespuesta" type="integer" column="tiempo_respuesta" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">tiempo en horas</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="descripcion" type="string" column="descripcion" length="300" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="reprograma" type="boolean" column="reprograma" nullable="true"/>
    <field name="tipoReprograma" type="string" column="tipo_reprograma" length="30" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
