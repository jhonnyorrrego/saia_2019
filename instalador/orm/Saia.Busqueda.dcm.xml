<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Saia\Busqueda" table="busqueda">
    <unique-constraints>
      <unique-constraint name="ui_busqueda_nombre" columns="nombre"/>
    </unique-constraints>
    <id name="idbusqueda" type="integer" column="idbusqueda">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nombre" type="string" column="nombre" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="etiqueta" type="string" column="etiqueta" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="estado" type="integer" column="estado" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="default">1</option>
      </options>
    </field>
    <field name="ancho" type="integer" column="ancho" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="default">200</option>
      </options>
    </field>
    <field name="campos" type="text" column="campos" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="llave" type="string" column="llave" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="tablas" type="string" column="tablas" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="rutaLibreria" type="string" column="ruta_libreria" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="rutaLibreriaPantalla" type="string" column="ruta_libreria_pantalla" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="cantidadRegistros" type="integer" column="cantidad_registros" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="default">30</option>
      </options>
    </field>
    <field name="tiempoRefrescar" type="integer" column="tiempo_refrescar" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="default">500</option>
      </options>
    </field>
    <field name="rutaVisualizacion" type="string" column="ruta_visualizacion" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="default">pantallas/busqueda/componentes_busqueda.php</option>
      </options>
    </field>
    <field name="tipoBusqueda" type="integer" column="tipo_busqueda" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="default">1</option>
      </options>
    </field>
    <field name="badgeCantidades" type="integer" column="badge_cantidades" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
