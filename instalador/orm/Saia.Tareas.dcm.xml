<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Saia\Tareas" table="tareas">
    <indexes>
      <index name="i_tareas_documento_" columns="documento_iddocumento"/>
    </indexes>
    <id name="idtareas" type="integer" column="idtareas">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="fecha" type="datetime" column="fecha" nullable="false"/>
    <field name="tarea" type="string" column="tarea" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="responsable" type="string" column="responsable" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="descripcion" type="text" column="descripcion" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="prioridad" type="string" column="prioridad" length="255" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="fechaTarea" type="date" column="fecha_tarea" nullable="false"/>
    <field name="ejecutor" type="integer" column="ejecutor" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="documentoIddocumento" type="integer" column="documento_iddocumento" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="estadoTarea" type="integer" column="estado_tarea" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
