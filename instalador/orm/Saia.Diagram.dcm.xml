<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Saia\Diagram" table="diagram">
    <unique-constraints>
      <unique-constraint name="uniqueHash" columns="hash"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="hash" type="string" column="hash" length="6" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="title" type="string" column="title" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="text" column="description" length="16777215" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="publico" type="boolean" column="publico" nullable="true">
      <options>
        <option name="default">1</option>
      </options>
    </field>
    <field name="createddate" type="datetime" column="createdDate" nullable="false"/>
    <field name="lastupdate" type="datetime" column="lastUpdate" nullable="false"/>
    <field name="tamano" type="integer" column="tamano" nullable="true">
      <options>
        <option name="unsigned">1</option>
        <option name="comment">The size of diagram in bytes</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
