<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Saia\RcmailIdentities" table="rcmail_identities">
    <indexes>
      <index name="user_identities_index" columns="user_id,del"/>
      <index name="email_identities_index" columns="email,del"/>
    </indexes>
    <id name="identityId" type="integer" column="identity_id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="userId" type="integer" column="user_id" nullable="false">
      <options>
        <option name="unsigned">1</option>
      </options>
    </field>
    <field name="changed" type="datetime" column="changed" nullable="false">
      <options>
        <option name="default">1000-01-01 00:00:00</option>
      </options>
    </field>
    <field name="del" type="boolean" column="del" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="standard" type="boolean" column="standard" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <field name="name" type="string" column="name" length="128" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="organization" type="string" column="organization" length="128" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default"/>
      </options>
    </field>
    <field name="email" type="string" column="email" length="128" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="replyTo" type="string" column="reply-to" length="128" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default"/>
      </options>
    </field>
    <field name="bcc" type="string" column="bcc" length="128" nullable="false">
      <options>
        <option name="fixed"/>
        <option name="default"/>
      </options>
    </field>
    <field name="signature" type="text" column="signature" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="htmlSignature" type="boolean" column="html_signature" nullable="false">
      <options>
        <option name="default">0</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
