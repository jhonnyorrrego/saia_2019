{
  "schema": {
    "title": "",
    "description": "Editar propiedades",
    "type": "object",
    "properties": {
      "fs_etiqueta": {
        "type": "string",
        "title": "Etiqueta del campo",
        "maxLength": 255,
        "required": true
      },
      "fs_nombre": {
        "type": "string",
        "title": "Nombre",
        "maxLength": 255,
        "required": true
      },
      "fs_valor": {
        "type": "object",
        "properties": {
          "tipos": {
            "type": "string",
            "title": "Tipos de archivo"
          },
          "longitud": {
            "type": "number",
            "title": "Tamaño máximo de archivo",
            "minimum": 1,
            "maximum": 20
          },
          "cantidad": {
            "type": "number",
            "title": "Cantidad de anexos",
            "minimum": 1,
            "maximum": 10
          }
        }
      },
      "fs_obligatoriedad": {
        "type": "boolean"
      },
      "fs_ayuda": {
        "type": "string",
        "title": "Ayuda para el usuario"
      }
    }
  },
  "options": {
    "fields": {
      "fs_nombre": {
        "type": "hidden"
      },
      "fs_valor": {
        "fields": {
          "longitud": {
            "inputType": "number"
          },
          "cantidad": {
            "inputType": "number"
          }
        }
      },
      "fs_obligatoriedad": {
        "type": "checkbox",
        "rightLabel": "Obligatorio"
      },
      "fs_ayuda": {
        "rows": 3,
        "type": "textarea"
      }
    }
  }
}
